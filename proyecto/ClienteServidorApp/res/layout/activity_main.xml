<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <Button
        android:id="@+id/botonBuscar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:text="Buscar" />

    <EditText
        android:id="@+id/codigoBuscar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/botonBuscar"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/botonBuscar"
        android:layout_toLeftOf="@+id/botonBuscar"
        android:ems="10"
        android:text="5449000000996" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/textoCodigo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/codigoBuscar"
        android:layout_below="@+id/codigoBuscar"
        android:layout_marginTop="44dp"
        android:text="Codigo:"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/textoDescripcion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textoCodigo"
        android:layout_below="@+id/textoCodigo"
        android:text="Descripcion:"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/textoPrecio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/textoCodigo"
        android:layout_below="@+id/textoDescripcion"
        android:text="Precio:"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    
</RelativeLayout>